<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_marginBottom="5dp"
    android:padding="10dp">

<LinearLayout
    android:layout_width="wrap_content"
    android:id="@+id/linear"
    android:layout_marginTop="5dp"
    android:layout_alignParentTop="true"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Mã sách : " />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textStyle="bold"
        android:id="@+id/tvMaPM"/>

</LinearLayout>
    <LinearLayout
        android:layout_below="@id/linear"
        android:id="@+id/linear2"
        android:layout_marginTop="5dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thành Viên : " />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:id="@+id/tvThanhVien"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear3"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear2"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên Sách : "
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textStyle="bold"
            android:id="@+id/tvTensach_Muon"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear4"
        android:layout_below="@id/linear3"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiền Thuê : " />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000"
            android:id="@+id/tvTienThue_Muon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" VND" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear6"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear4"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giờ mượn : "
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvGioMuon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textStyle="bold" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:text="Đã trả sách"
        android:layout_marginRight="10dp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_below="@id/linear6"
        android:textColor="#000DFF"
        android:id="@+id/tvTrangThai"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="19dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ngaythue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày thuê : "
            android:textColor="#818181" />

        <TextView
            android:id="@+id/tvNgaythue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2023-09-8"
            android:textColor="#818181" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linear5"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:id="@+id/ivDel_Muon"
            android:layout_marginRight="5dp"
            android:src="@drawable/trash"
            android:layout_height="40dp"/>
        <ImageView
            android:layout_width="30dp"
            android:id="@+id/ivUpdate_Muon"
            android:src="@drawable/pencil"
            android:layout_height="40dp"/>
    </LinearLayout>

</RelativeLayout>