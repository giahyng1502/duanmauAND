<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragments.FragmentDoanhThu">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
<!--        <Button-->
<!--            android:layout_width="120dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Từ Ngày"-->
<!--            android:layout_marginBottom="20dp"-->
<!--            android:background="@drawable/custom_button"-->
<!--            app:backgroundTint="@null"-->
<!--            android:id="@+id/btnTuNgay"/>-->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:hint="Từ ngày"
                android:focusable="false"
                android:inputType="none"
                android:padding="10dp"
                android:clickable="true"
                android:layout_height="wrap_content"
                android:id="@+id/edtTuNgay"/>
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
<!--        <Button-->
<!--            android:layout_width="120dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Đến Ngày"-->
<!--            android:background="@drawable/custom_button"-->
<!--            app:backgroundTint="@null"-->
<!--            android:id="@+id/btnDenNgay"/>-->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:clickable="true"
                android:focusable="false"
                android:inputType="none"
                android:hint="Đến ngày"
                android:padding="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/edtDenNgay"/>
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
<Button
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:text="CHECK"
    android:background="@drawable/custom_button"
    app:backgroundTint="@null"
    android:id="@+id/btnCheckDoanhThu"
    android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kết Quả"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:hint="Doanh Thu Của Bạn"
            android:focusable="false"
            android:inputType="none"
            android:padding="10dp"
            android:clickable="true"
            android:layout_height="50dp"
            android:id="@+id/edtDoanhThu"/>
    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>